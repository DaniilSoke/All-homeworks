#include <iostream>
int main()
{
    setlocale(LC_ALL, "Rus");
    //ввод
    int n, m;
    std::cout << "Введите колво строк и столбцов в матрице : ";
    std::cin >> m >> n;;
    int** a = new int* [m];
    for (int i = 0; i < m; i++) {
        a[i] = new int[n];
    }
    std::cout << "Введите элементы матрицы : " << std::endl;
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            std::cin >> a[i][j];
        }
    }
    //обработка
    std::cout << "Введите элемент, про который вы хотите узнать, сколько раз он встречается в матрице: ";
    int x, kol = 0;
    std::cin >> x;
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < m; j++) {
            if (a[i][j] == x) {
                kol++;
            }
        }
    }
    //вывод
    std::cout << kol << std::endl;
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            std::cout << a[i][j] << "\t";
        }
        std::cout << std::endl;
    }
    return 0;
}
